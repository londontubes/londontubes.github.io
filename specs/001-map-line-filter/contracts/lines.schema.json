{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://londontube.example.com/schemas/lines.schema.json",
  "title": "TransitLineCollection",
  "type": "object",
  "required": ["generatedAt", "source", "lines"],
  "properties": {
    "generatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO timestamp when the dataset was generated"
    },
    "source": {
      "type": "object",
      "required": ["provider", "dataset"],
      "properties": {
        "provider": {
          "type": "string",
          "const": "Transport for London"
        },
        "dataset": {
          "type": "string",
          "enum": ["Unified API RouteSequence", "GeoJSON"]
        },
        "version": {
          "type": "string",
          "description": "Optional TfL dataset version tag"
        }
      },
      "additionalProperties": false
    },
    "lines": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "lineCode",
          "displayName",
          "brandColor",
          "textColor",
          "polyline",
          "stationIds",
          "mode",
          "lastUpdated"
        ],
        "properties": {
          "lineCode": {
            "type": "string",
            "pattern": "^[a-z\\-]+$"
          },
          "displayName": {
            "type": "string",
            "minLength": 1
          },
          "brandColor": {
            "type": "string",
            "pattern": "^#[0-9A-Fa-f]{6}$"
          },
          "textColor": {
            "type": "string",
            "pattern": "^#[0-9A-Fa-f]{6}$"
          },
          "mode": {
            "type": "string",
            "enum": ["tube", "dlr"]
          },
          "strokeWeight": {
            "type": "integer",
            "minimum": 1,
            "maximum": 12,
            "default": 4
          },
          "polyline": {
            "type": "object",
            "required": ["type", "coordinates"],
            "properties": {
              "type": {
                "type": "string",
                "enum": ["LineString", "MultiLineString"]
              },
              "coordinates": {
                "oneOf": [
                  {
                    "type": "array",
                    "minItems": 2,
                    "items": {
                      "type": "array",
                      "minItems": 2,
                      "maxItems": 2,
                      "items": [
                        { "type": "number", "minimum": -180, "maximum": 180 },
                        { "type": "number", "minimum": -90, "maximum": 90 }
                      ],
                      "additionalItems": false
                    }
                  },
                  {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                      "type": "array",
                      "minItems": 2,
                      "items": {
                        "type": "array",
                        "minItems": 2,
                        "maxItems": 2,
                        "items": [
                          { "type": "number", "minimum": -180, "maximum": 180 },
                          { "type": "number", "minimum": -90, "maximum": 90 }
                        ],
                        "additionalItems": false
                      }
                    }
                  }
                ]
              }
            },
            "additionalProperties": false
          },
          "bounds": {
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "items": {
              "type": "array",
              "minItems": 2,
              "maxItems": 2,
              "items": [
                { "type": "number", "minimum": -180, "maximum": 180 },
                { "type": "number", "minimum": -90, "maximum": 90 }
              ],
              "additionalItems": false
            }
          },
          "stationIds": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string"
            },
            "uniqueItems": true
          },
          "interchanges": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["stationId", "connectingLines"],
              "properties": {
                "stationId": { "type": "string" },
                "connectingLines": {
                  "type": "array",
                  "items": { "type": "string" },
                  "minItems": 1
                }
              },
              "additionalProperties": false
            }
          },
          "lastUpdated": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
