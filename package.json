{
  "name": "london-tube-map",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "prebuild": "npm run data:validate",
  "build": "npm run data:refresh && next build",
    "start": "next start",
    "start:static": "npx serve@latest out",
    "lint": "next lint",
    "test": "jest",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "audit:accessibility": "lighthouse-ci autorun",
    "data:refresh": "tsx scripts/data/fetch-tfl.ts && tsx scripts/data/transform.ts",
    "data:validate": "tsx scripts/data/validate.ts"
  },
  "dependencies": {
    "@googlemaps/js-api-loader": "^1.16.6",
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.9.0",
    "@lhci/cli": "^0.13.0",
    "@playwright/test": "^1.44.0",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^15.0.0",
    "@types/google.maps": "^3.58.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.4.5",
    "tsx": "^4.10.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": "20.x",
    "npm": "10.x"
  }
}
